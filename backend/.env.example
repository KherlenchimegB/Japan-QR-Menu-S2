# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/monopharma
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/monopharma

# Cloudinary Configuration (for media uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# JWT Configuration (for authentication)
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# emonos.mn Integration
EMONOS_BASE_URL=https://emonos.mn
EMONOS_API_KEY=your_emonos_api_key

# File Upload Limits
MAX_FILE_SIZE=104857600
MAX_FILES_PER_UPLOAD=10

# Security
HELMET_CSP_DIRECTIVES=default-src 'self'
BCRYPT_SALT_ROUNDS=12

# Database Seed Data
SEED_ADMIN_EMAIL=admin@monopharma.mn
SEED_ADMIN_PASSWORD=admin123
SEED_CATEGORIES=true
SEED_PRODUCTS=true